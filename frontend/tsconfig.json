{
  "compilerOptions": {
      "noImplicitAny": true,
      "removeComments": true,
      "jsx": "react",
      "module": "ES2020",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "paths": {
        "components/*": ["./source/components/*"],
        "views/*": ["./source/views/*"],
        "constants/*": ["./source/constants/*"],
      }
  },
  "exclude": [
    "node_modules",
    "*.test.tsx"
  ],
  "awesomeTypescriptLoaderOptions": {
      /* ... */
  }
}